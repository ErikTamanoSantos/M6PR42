<AnchorPane fx:id="anchor" minHeight="500.0" minWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller0">
   <children>
      <GridPane prefHeight="75.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Carregar dades de: ">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#loadGameCube" text="GameCube" GridPane.columnIndex="1" />
            <Button mnemonicParsing="false" onAction="#loadXbox" text="Xbox One" GridPane.columnIndex="2" />
            <Button mnemonicParsing="false" onAction="#loadPlaystation3" text="Playstation 3" GridPane.columnIndex="3" />
            <Button mnemonicParsing="false" onAction="#listBrands" text="Llista de marques" GridPane.columnIndex="4" />
            <ChoiceBox fx:id="choiceBox" prefHeight="25.0" GridPane.columnIndex="4" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label fx:id="txtName" alignment="CENTER" layoutY="130.0" text="Nom de la videoconsola" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="txtDate" alignment="CENTER" layoutX="10.0" layoutY="159.0" text="0000-00-00" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <Label fx:id="txtBrand" alignment="CENTER" layoutX="10.0" layoutY="183.0" text="Marca" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="238.0" prefHeight="100.0" prefWidth="200.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <ImageView fx:id="imgConsole" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="20.0" layoutY="248.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <Path fx:id="loading" fill="#1f93ff00" stroke="#9e9e9e" strokeType="INSIDE" strokeWidth="2.0" visible="false">
                <elements>
                    <MoveTo />
                    <ArcTo radiusX="15.0" radiusY="15.0" x="15.0" y="15.0" />
                  <ArcTo radiusX="15.0" radiusY="15.0" x="15.0" y="-15.0" />
                </elements>
            </Path>
         </children>
      </HBox>
   </children>
</AnchorPane>
